        <assign to="bootstrap">false</assign>
        <assign to="collectionFolder">/software/data/mysftpuser/upload/Test/Inbound/Test</assign>
        <assign to="fileModTimeThreshold">10</assign>
        <assign to="deleteAfterCollect">false</assign>
