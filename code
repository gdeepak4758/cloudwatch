<?xml version="1.0" encoding="UTF-8"?>
<process name="testing_LJDBC">

  <rule name="FILE_CONDITION">
    <condition>number(//FILE_COUNT/text()) &lt;= number(//FSA_DocumentCount/text())</condition>
  </rule>

  <rule name="FILE_Check">
    <condition>string(/ProcessData/result/ENVELOPE/CURRENT_FILENAME/text()) != string(/ProcessData/current_filename/text())</condition>
  </rule>

  <sequence name="Sequence Start">

    <!-- Collect Files -->
    <operation name="Collect Files">
      <participant name="E5FileSystem"/>
      <output message="FileSystemInputMessage">
        <assign to="Action">FS_COLLECT</assign>
        <assign to="bootstrap">false</assign>
        <assign to="collectionFolder">/software/data/mysftpuser/upload/Test/Inbound/Demo</assign>
        <assign to="fileModTimeThreshold">10</assign>
        <assign to="deleteAfterCollect">false</assign>
        <assign to="thresholdWait">true</assign>
        <assign to="maxThreads">10</assign>
        <assign to="collectMultiple">true</assign>
      </output>
      <input message="inmsg"><assign to="." from="*"/></input>
    </operation>

    <assign to="FILE_COUNT">1</assign>

    <choice name="Condition">
      <select>
        <case ref="FILE_CONDITION" activity="PJ"/>
      </select>

      <sequence name="PJ">

        <!-- Set Primary Document -->
        <assign to="PrimaryDocument" from="//*[starts-with(name(), 'FSA_Document')][position()=/ProcessData/FILE_COUNT/text()]/@SCIObjectID"/>

        <!-- Get Document Info -->
        <operation name="Get Document Info">
          <participant name="GetDocumentInfoService"/>
          <output message="GetDocumentInfoServiceTypeInputMessage">
            <assign to="." from="*"/>
          </output>
          <input message="inmsg">
            <assign to="DocumentName" from="*"/>
          </input>
        </operation>

        <assign to="current_filename" from="/ProcessData/DocumentName/DocumentName/text()"/>

        <!-- Check DB for Filename -->
        <operation name="Check DB">
          <participant name="LightweightJDBCAdapterQuery"/>
          <output message="LightweightJDBCAdapterTypeInputMessage">
            <assign to="param1" from="/ProcessData/current_filename/text()"/>
            <assign to="paramtype1">String</assign>
            <assign to="pool">oraclePool</assign>
            <assign to="query_type">SELECT</assign>
            <assign to="result_name">result</assign>
            <assign to="row_name">ENVELOPE</assign>
            <assign to="sql">SELECT * FROM FILENAMES WHERE CURRENT_FILENAME LIKE ?</assign>
          </output>
          <input message="inmsg"><assign to="." from="DocToDOM(PrimaryDocument)"/></input>
        </operation>

        <choice name="Condition1">
          <select>
            <case ref="FILE_Check" activity="PR"/>
          </select>

          <sequence name="PR">

            <assign to="PrimaryDocument" from="//*[starts-with(name(), 'FSA_Document')][position()=/ProcessData/FILE_COUNT/text()]/@SCIObjectID"/>

            <!-- Extract File -->
            <operation name="Extract File">
              <participant name="E5FileSystem"/>
              <output message="FileSystemInputMessage">
                <assign to="Action">FS_EXTRACT</assign>
                <assign to="bootstrap">false</assign>
                <assign to="extractionFolder">/software/data/mysftpuser/upload/Test/Inbound/Test</assign>
              </output>
              <input message="inmsg"><assign to="." from="*"/></input>
            </operation>

            <!-- Insert into DB -->
            <operation name="Insert DB">
              <participant name="LightweightJDBCAdapterQuery"/>
              <output message="LightweightJDBCAdapterTypeInputMessage">
                <assign to="param1" from="/ProcessData/current_filename/text()"/>
                <assign to="paramtype1">String</assign>
                <assign to="pool">oraclePool</assign>
                <assign to="query_type">INSERT</assign>
                <assign to="sql">INSERT INTO FILENAMES(Current_Filename) VALUES(?)</assign>
              </output>
              <input message="inmsg"><assign to="." from="*"/></input>
            </operation>

          </sequence>

          <!-- Release if skipped -->
          <operation name="Release Unprocessed">
            <participant name="ReleaseService"/>
            <output message="ReleaseServiceTypeInputMessage">
              <assign to="TARGET">/ProcessData/PrimaryDocument | /ProcessData/current_filename | /ProcessData/result/row/FILENAME | /ProcessData/DocumentName</assign>
              <assign to="." from="*"/>
            </output>
            <input message="inmsg"><assign to="." from="*"/></input>
          </operation>

        </choice>

        <!-- Increment and Repeat -->
        <assign to="FILE_COUNT" from="FILE_COUNT+1"/>
        <repeat name="Repeat" ref="Condition"/>

      </sequence>
    </choice>

    <!-- Final Release -->
    <operation name="Final Release">
      <participant name="ReleaseService"/>
      <output message="ReleaseServiceTypeInputMessage">
        <assign to="TARGET">/ProcessData/PrimaryDocument | /ProcessData/current_filename | /ProcessData/result/row/FILENAME | /ProcessData/DocumentName</assign>
        <assign to="." from="*"/>
      </output>
      <input message="inmsg"><assign to="." from="*"/></input>
    </operation>

    <!-- Collect & Concatenate -->
    <operation name="Collect Again">
      <participant name="E5FileSystem"/>
      <output message="FileSystemInputMessage">
        <assign to="Action">FS_COLLECT</assign>
        <assign to="bootstrap">false</assign>
        <assign to="collectionFolder">/software/data/mysftpuser/upload/Test/Inbound/Test</assign>
        <assign to="fileModTimeThreshold">10</assign>
        <assign to="deleteAfterCollect">false</assign>
        <assign to="thresholdWait">true</assign>
        <assign to="maxThreads">10</assign>
        <assign to="collectMultiple">true</assign>
        <assign to="concatenateFiles">true</assign>
      </output>
      <input message="inmsg"><assign to="." from="*"/></input>
    </operation>

    <assign to="SFG_logs" from="concat('sfg_logs_', '.', '.', '.json')"/>

    <!-- Final Extract -->
    <operation name="Final Extract">
      <participant name="E5FileSystem"/>
      <output message="FileSystemInputMessage">
        <assign to="Action">FS_EXTRACT</assign>
        <assign to="assignedFilename" from="/ProcessData/SFG_logs/text()"/>
        <assign to="bootstrap">false</assign>
        <assign to="extractionFolder">/software/data/mysftpuser/upload/Test/Inbound/Test 2</assign>
      </output>
      <input message="inmsg"><assign to="." from="*"/></input>
    </operation>

  </sequence>
</process>